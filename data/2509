<script type="text/javascript">
function PosBlock(){
  var heightView = $(window).height();
  var widthView = $(window).width();
  var heightBlock = $('.block_list_phone').height();
  var widthBlock = $('.block_list_phone').width();
  
  var posX = (widthView - widthBlock)/2;  
  var posY = (heightView - heightBlock)/2;
  
  if(heightBlock > heightView){
      $('.block_list_phone').css({"left": posX, "top": 0})
    }
    else{
      $('.block_list_phone').css({"left": posX, "top": posY})
    }
}
  if(screen.height>900){
    $('.section').css({
      "top": "0%"
    });
  }
  else{
    $('.section').css({
      "top":"0%", 
    });   
  }
  /*console.log(screen.height);
  if(screen.height>850){
    $('#list_pagination').css({
      "top": "25%"
    });
  }
  else{
    $('#list_pagination').css({
      "top":"10%", 
    });   
  }*/
$(function() {
    
  /*V2*/
    $('#page').fullpage({
      'verticalCentered': false,
      'slidesNavigation': true,
      'slidesNavPosition': 'bottom',
      'css3': true,
      'sectionsColor': ['#fff', '#fff', '#fff', '#fff'],
      'navigation': false,
      'responsive' : 300,
      'navigationPosition': 'right',
      'menu': '#list_pagination',
      'anchors':['1rdPage', '2rdPage', '3rdPage', '4rdPage', '5rdPage', '6rdPage', '7rdPage', '8rdPage', '9rdPage', '10rdPage'],
      'slidesNavigation': true,
      'autoScrolling': true,
      'navigationTooltips': ['text 1', 'text 2', 'text 3', 'text 4'],
    });
  $('.fp-next').on('click', function(){
        $.fn.fullpage.moveSectionDown();
    }); 
  $('.fp-prev').on('click', function(){
        $.fn.fullpage.moveSectionUp();
    }); 
  /*End V2*/
$('.block_thongso a span').hover(function () {
    $(this).next('div').animate({opacity: '1' }, 250);
}, function() {  
    $(this).next('div').animate({opacity: '0' }, 250);
});
  
  $('.block_list_phone .phone_item').click(function(){
    $('#page').addClass('section2');
        $('#page').removeClass('show_txt');
        $('.back_home').addClass('active');
    cycleItems();
  })
  $('.go_home').click(function(){     
    $('#page').removeClass('section2');
        $('#page').removeClass('show_txt');
    $('.page_slider').removeClass('view_thumb');
    $('.block_main_slider').removeClass('running');
  })
  $('.view_all').click(function(){
     $(this).addClass('active'); 
    $('.view_total').addClass('view_cc');
        $('#page').addClass('show_txt');
    $('.section').removeClass('running');
    $('.section').removeClass('active');
        $('.back_home').removeClass('active');
    $('#round_control').addClass('hidden');
  })
  $('.show_item').click(function(){
    $('.page_slider').removeClass('view_thumb');
        $('#page').removeClass('show_txt');
        $('.back_home').addClass('active');
        $('.view_all').removeClass('active');
    //$('.section').addClass('active');
    $('.block_main_slider').removeClass('running');
        $('.view_total').removeClass('view_cc');
  })
    $('.pagination_item').click(function(){
    $('.view_total').removeClass('view_cc');
  })
    
    $('#phone0').click(function(){
    $('#section0').addClass('active');
  })
    
    $('#phone1').click(function(){
    $('#section1').addClass('active');
  })
  
   $(".block_close_menu_sh").swipe( {
    //Generic swipe handler for all directions
    swipeLeft:function(event, direction, distance, duration, fingerCount) {
      $('#box_col_left_sh').animate({left:"-275"},200,function(){
          var heightColleft = $('#box_col_left_sh .block_scoll_menu_sh').height();
          //$('#page').height('');
          //$('#page').removeClass("hidden");
        $(".block_close_menu").hide();
        })
    },
    tap:function(event, target) {
      $('#box_col_left_sh').animate({left:"-275"},200,function(){
        var heightColleft = $('#box_col_left_sh .block_scoll_menu_sh').height();
        //$('#page').height('');
        //$('#page').removeClass("hidden");
        $(".block_close_menu_sh").hide();
      })
    },
    //Default is 75px, set to 0 for demo so any distance triggers swipe
    threshold:0
  });

   $('.btn_control_col_left_sh').click(
    function(){
      var pos1 = $('#box_col_left_sh').css('left');
      
      if( pos1 == "-275px"){
        $('#box_col_left_sh').animate({left:"0"},200,function(){
          var heightColleft = $('#box_col_left_sh .block_scoll_menu_sh').height();
          $('#box_col_left_sh').addClass('active');
          $(".block_close_menu_sh").show();

        })
      }
      else{
        $('#box_col_left_sh').animate({left:"-275"},200,function(){
          var heightColleft = $('#box_col_left_sh .block_scoll_menu_sh').height();
          $('#box_col_left_sh').removeClass('active');
          $(".block_close_menu_sh").hide();
        })
      }
    }
   )
  

});

</script>
<script type="text/javascript">
    $(".icon_hover").mouseover(function(event) {
        event.preventDefault();
        $(this).parent().addClass("active");
        $(this).parent().siblings().removeClass("active");
    });
    
    $(".icon_hover").mouseout(function(event) {
        event.preventDefault();
        $(this).parent().removeClass("active");
    });
</script>
