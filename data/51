    <title>Báo VietNamNet</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <script type="text/javascript">

        var msg = 'Bạn có muốn cài đặt ứng dụng đọc báo VietNamNet?';
        var isiOS = /ipad|iphone|ipod/i.test(navigator.userAgent.toLowerCase());
        var isAndroid = /android/i.test(navigator.userAgent.toLowerCase());

        if (isiOS) {
            if (confirm(msg)) {
                window.location = 'https://itunes.apple.com/vn/app/vietnamnet-bo-tt-tt/id824006052?mt=8';
            }
        }

        if (isAndroid) {
            if (confirm(msg)) {
                window.location = 'http://play.google.com/store/apps/details?id=vn.vietnamnet.apps';
            }
        }

    </script>
</head>
