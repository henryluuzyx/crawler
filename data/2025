            var w = $(this).attr('w');
            if (typeof (w) == 'undefined') {
                w = $(this).width();
            }
            w = parseInt(w);
    
    if(w>0 && $parent.width()>0)
    {
            if (w < $parent.width()) {
                $parent.css({
                    width: w
                });
                $(this).css({
                    width: w
                });
            } else {
                $(this).css({
                    width: $parent.width()
                });
            }
    }
        });
