									var blanks = $('.check_blank');
									for(var i=0; i<blanks.length; i++){
										if( $(blanks[i]).val().trim()=='' ){
											var label = $(blanks[i]).parent().find('label').text();
											$(blanks[i]).parent().find('p').text('vui lòng nhập '+ label);
											return false;
										}
									}
									var name = $('.name').val();
									// var sender = $('.sender').val();
									var receiver = $('.receiver').val();
									var msg_body =  $('.email-content').val()+ '<br> xem bài viết tại đây: <a href="/tin/http://dulich.tuoitre.vn/tin/20170315/lam-gi-de-don-du-khach-tu-hieu-ung-phim-kong/1280381.html">Làm gì để đón du khách từ hiệu ứng phim Kong?</a>';
