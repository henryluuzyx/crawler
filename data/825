									var msg_body =  $('.email-content').val()+ '<br> xem bài viết tại đây: <a href="http://tuoitre.vn/tin/the-gioi/20170317/kinh-di-trong-nha-may-trung-quoc-tai-che-ta-xai-roi/1282007.html">Kinh dị trong nhà máy Trung Quốc tái chế… tã xài rồi</a>';
