            mobile.init();

            setInterval(function () {
                if (Math.floor(Math.random() * 10) <= 3) {
                    $('#btn-gift').show();
                    setTimeout(function () {
                        $('#btn-gift').hide();
                    }, 5000)
                } else {
                    $('#btn-gift').hide();
                }
            }, 10000)
        });
