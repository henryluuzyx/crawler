<section class="main-article fullscreen-gallery">
<div class="article-wrp clearfix storybox jsdone  " id="storybox649900" content="649900" zone="89" url="/toi-viet/kong-va-du-lich-815981.html" mytitle="Kong và du lịch | Tôi viết | Thanh Niên" shorturl="http://thanhnien.vn/content/NjQ5OTAw.html" interview="0">
<script type="text/javascript">
var bodywidth = Math.min($('#storybox649900').hasClass('infographic-content') ? 820 : ($('#storybox649900').hasClass('hasinterview') ? 665 : 665), $(window).width() - 20);
