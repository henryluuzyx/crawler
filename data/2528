        $(document).ready(function() {
            /* Scroll table ty gia in box thitruong_new */
            if ($("#calc_giavang").height() > 30) {
                $("#calc_tygia").css('height', $("#calc_giavang").css('height'));
            }
            if ($('#thitruong_new .block_tygia .scroll-pane').size() > 0) {
                $('#thitruong_new .block_tygia .scroll-pane').niceScroll('#thitruong_new .block_tygia .content_scoller', { touchbehavior: false, autohidemode: false });
            }
            $(window).resize(function(){
                if ($("#calc_giavang").height() > 30) {
                    $("#calc_tygia").css('height', $("#calc_giavang").css('height'));
                }
                $('#thitruong_new .block_tygia .scroll-pane').getNiceScroll().resize();
            });
        });
    </script>
