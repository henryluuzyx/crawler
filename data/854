<script type="text/javascript">
/*<![CDATA[*/
	
    /*$(window).load(function(){
        $('.sort-desc').click();        
      });*/


            function viewMoreESTag(e, t, n, r, i, s, scroll) {
                var o = parseInt($("#page_number").val()) + 1;
                var u = e + "page?slug=" + t + "&ajax=" + n + "---" + r;
                if (s == -1) s = parseInt($("#tag_id").val());
                $.ajax({
                    type: "POST",
                    url: u,
                    data: {
                        page_number: o,
                        tag_id: s,
                        YII_CSRF_TOKEN: "+i+"
                    },
                    beforeSend: function () {
                        $("#loading").show();
                        $("#viewmore").hide();
                    },
                    success: function (e) {
                        var content_area = $(e).find("#tag_contents");
                        if ($.trim(content_area.html()) != "") {
                            var t = $("#tag_contents");

                            // remove unused css
                            content_area.find("div.block-left").first().removeClass("block-top");

                            t.append(content_area.html());
                            changeUrlByPage(o);
                            $("#page_number").val(o);

                            // hide pagination
                            var hasNextPage = $(e).find("#viewmore");
                            if ($.trim(hasNextPage.html()) == "") {
                                $(".readmore").remove();
                                $(scroll).removeAttr("onClick");
                            }
                        } else {
                            $(".readmore").remove();
                            $(scroll).removeAttr("onClick");
                        }
                    }
                }).done(function(){
                    $("#loading").hide();
                    $("#viewmore").show();
                });
            }
            
/*]]>*/
</script>
