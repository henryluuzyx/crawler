          $.getScript('//connect.facebook.net/en_US/sdk.js', function () {
            FB.init({
              appId: '833523336774156',
              version: 'v2.4',
              xfbml:true
            });
$('#fb-share-clone').click(function(){
            FB.ui({
                method: 'share',
                href: window.location.href,
              }, function(response){});
        });

          });
        });
      </script></body></html>
