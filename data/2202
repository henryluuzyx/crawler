$(function() {
    if(typeof(Parser) != "undefined")
    {
        Parser.SITE_URL         = base_url;
        Parser.URL              = js_url;
        Parser.FLASH_URL        = flash_url;
        Parser.SITE_ID          = site_id;
        Parser.AUTO_PLAY        = 1;
        Parser.parseAll();
    }

          var pixl = 3200,
      pageviews = [],
      times = Math.ceil($(document).height()/pixl);
      $(window).scroll(function() {
        for(i = 1; i <= times; ++i)
        {
          var order = i*pixl;
          if($(window).scrollTop() > order && $.inArray(order, pageviews) < 0)
          {
           pageviews.push(order);
           $('#tracking').append('<iframe src="/projects/eos-m5---chiec-mirrorless-manh-nhat-cua-canon-3548839/tracking.html" width="1" height="1"></iframe>');
          }
        }
      });
    });
