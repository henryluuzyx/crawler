var bodywidth = 620; //$('.article-content img[src*="/live/"], .article-content img[src*="/Live/"]').length > 0 ? 500 :
//$('#abody object, #abody embed').each(function() {
// if ($(this).attr('width') == '600') $(this).attr("width", '560');
//});
$('#abody table.video').css('width', '');
$('<div style="clear:both;"></div>').insertAfter('#abody table.video');
//$('#abody .imageads img').each(function() {
// $(this).attr('src', $(this).attr('src').replace('?width=' + bodywidth, ''));
//});
$("#abody img").one("load", function() {
if ($(this).parents('.imageads').length > 0) {
$(this).attr('src', $(this).attr('src').replace('?width=600', '')).css('max-width', bodywidth + 'px');//.width(bodywidth).height('auto');
if ($(this).width() > bodywidth) { $(this).width(bodywidth).height('auto'); }
} else if ($(this).attr('src').toLowerCase().indexOf('/uploaded/') < 0 || $(this).parents('.image').length > 0 || $(this).parents('blockquote').length > 0) {
if ($(this).width() > bodywidth) { $(this).width(bodywidth).height('auto'); }
}else {

if ($(this).width() > $(this).height()) {
//horizon
$(this).attr('src', $(this).attr('src').replace('?width=600', '?width=' + bodywidth)).width(bodywidth).height('auto');
$(this).parents('.imagefull').width(bodywidth).height('auto');
} else {
$(this).attr('src', $(this).attr('src').replace('?width=600', '?width=510')).width(510).height('auto');
$(this).parents('.imagefull').width(510).height('auto');
}
}
}).each(function() {
if(this.complete) $(this).load();
});
$(document).ready(function () {
$('#abody table').each(function() { if ($(this).width() > bodywidth) { $(this).width(bodywidth).height('auto'); } });
window.setTimeout(function(){ $('#abody table,#abody object, #abody embed').each(function() { if ($(this).width() > bodywidth) { $(this).width(bodywidth).height('auto'); } });}, 5000);
$('#abody table').height('auto');
$('#abody div.article-poll').each(function() {
if ($(this).offset().top <= $('#abody').offset().top + 200) {
$(this).css('float','right');
}
var voteid = $(this).attr('voteid');
showvote(voteid);
});
});
</script>
