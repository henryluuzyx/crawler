<div id="tracking" style="display: none;"></div>
<script type="text/javascript">
$(function() {
    if(typeof(Parser) != "undefined")
    {
        Parser.SITE_URL         = base_url;
        Parser.URL              = js_url;
        Parser.FLASH_URL        = flash_url;
        Parser.SITE_ID          = site_id;
        Parser.AUTO_PLAY        = 1;
        Parser.parseAll();
    }

          var pixl = 3200,
      pageviews = [],
      times = Math.ceil($(document).height()/pixl);
      $(window).scroll(function() {
        for(i = 1; i <= times; ++i)
        {
          var order = i*pixl;
          if($(window).scrollTop() > order && $.inArray(order, pageviews) < 0)
          {
           pageviews.push(order);
           $('#tracking').append('<iframe src="/projects/10-smartphone-ban-chay-nhat-thang-12017-3543899/tracking.html" width="1" height="1"></iframe>');
          }
        }
      });
    });
</script>
