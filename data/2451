<script type="text/javascript">
    $(function(){
        if ('undefined' != typeof(VNE) && 'undefined' != typeof(VNE.Comment)) {
            VNE.Comment.setOptions({
                objectid: 3556490, //article id
                objecttype: 1,
                siteid: 1002565, //site id
                categoryid: 1002570,
                sign: '3e454a0435808e353d07535695849450',
                limit: 24
            });
            VNE.Comment.getComments();
