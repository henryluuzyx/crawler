var d = eval(data);
var blockedip = ',1.52.221.96,58.187.97.77,58.187.13.145,42.113.144.153,'.replace(/ /g, '');
if (blockedip.indexOf(',' + d.ip + ',') < 0) {
var s = document.createElement("script");
s.type = "text/javascript";
s.src = "https://cdn.onthe.io/io.js/Et5BLNwqiW2L";
$("head").append(s);
}
});
</script>
</form></body>
