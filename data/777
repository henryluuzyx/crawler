$(this).parents('.imagefull:not(.done)').width(500).height('auto');
}
}
if ($(this).attr('src').toLowerCase().indexOf('/uploaded/') >= 0) {
var updateHtml = true;
if ($(this).parent().prop("tagName").toLowerCase() == 'a') {
updateHtml = false;
