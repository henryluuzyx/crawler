}
if (updateHtml) {
if ($(this).next('br').length) {
$(this).next('br').first().remove();
}
var title = '';
if ($(this).parents('figure').length > 0) {
title = $(this).parents('figure:first').find('figcaption').text().escape();
}
if (title == '' && $(this).next().hasClass('caption')) {
title = $(this).next().text().escape();
}
if (title == '' && $(this).parent().find('div.caption').length > 0) {
title = $(this).parent().find('div.caption').text().escape();
}
if (title == '' && $(this).parent().find('span').length > 0) {
title = $(this).parent().find('span').text().escape();
}
if (title == '') {
if ($(this).parent().prop("tagName").toLowerCase() == 'div') {
title = $(this).parent().text().escape();
if (title == '') {
title = $(this).parent().next().text().escape();
}
}
}
if (title == '') {
var p = $(this).parent().clone();
p.find('img').remove();
title = p.html().escape();
}
try {
title = title.trim();
} catch(abc) {
}
var w = $(this).width();
var h = $(this).height();
